<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCFC"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/bottomBarContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bottombar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_vendas"
                style="@style/BottomNavIcon"
                android:contentDescription="Vendas"
                android:src="@drawable/ic_vendas" />

            <ImageView
                android:id="@+id/nav_estoque"
                style="@style/BottomNavIcon"
                android:contentDescription="Estoque"
                android:src="@drawable/ic_estoque" />

            <ImageView
                android:id="@+id/nav_home"
                style="@style/BottomNavIcon"
                android:contentDescription="Menu"
                android:src="@drawable/ic_home" />

            <ImageView
                android:id="@+id/nav_pedidos"
                style="@style/BottomNavIcon"
                android:contentDescription="Pedidos"
                android:src="@drawable/ic_pedidos" />

            <ImageView
                android:id="@+id/nav_produtos"
                style="@style/BottomNavIcon"
                android:contentDescription="Produtos"
                android:src="@drawable/ic_produtos" />

        </LinearLayout>
    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/bottomBarContainer"
        android:layout_below="@id/logo"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        tools:ignore="NotSibling" />


</RelativeLayout>